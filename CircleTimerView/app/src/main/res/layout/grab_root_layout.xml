<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_grab_root"
        android:layout_width="114dp"
        android:layout_height="110dp"
        android:layout_centerInParent="true"
        android:background="@android:color/transparent">

        <com.test.circletimerview.GrabSingWrapProcessLayout
            android:id="@+id/gswp_layout"
            android:layout_width="108dp"
            android:layout_height="108dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:visibility="visible"
            app:process_first_color="#FFFF8779" />

        <RelativeLayout
            android:id="@+id/rl_wrap_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true">

            <ImageView
                android:layout_width="110dp"
                android:layout_height="100dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@mipmap/ic_grab_background_v2_btn" />

            <ImageView
                android:id="@+id/iv_grab_sing"
                android:layout_width="102dp"
                android:layout_height="84dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_grab_sing_v2_btn" />

            <ImageView
                android:id="@+id/iv_grab_record"
                android:layout_width="102dp"
                android:layout_height="84dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_grab_record_v2_btn" />

            <ImageView
                android:id="@+id/iv_count_down"
                android:layout_width="102dp"
                android:layout_height="84dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_grab_sing_v2_btn" />

            <ImageView
                android:id="@+id/iv_grab_disable"
                android:layout_width="102dp"
                android:layout_height="84dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_grab_disable_v2_btn" />

            <FrameLayout
                android:id="@+id/fl_count_down"
                android:layout_width="84dp"
                android:layout_height="84dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="12dp"
                android:visibility="invisible"
                tools:visibility="visible">

                <TextView
                    android:id="@+id/tv_count_down"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="1"
                    android:textColor="@android:color/white"
                    android:textSize="50sp"
                    android:textStyle="bold|italic" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/fl_grab_sing"
                android:layout_width="84dp"
                android:layout_height="84dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="12dp"
                android:visibility="invisible"
                tools:visibility="visible">

                <TextView
                    android:id="@+id/tv_grab_sing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/vocal_grab"
                    android:textAllCaps="true"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:textStyle="bold|italic" />
            </FrameLayout>
        </RelativeLayout>
    </RelativeLayout>

</merge>